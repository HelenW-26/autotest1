<?xml version="1.0" encoding="UTF-8"?><!DOCTYPE suite SYSTEM "http://testng.org/testng-1.0.dtd">

<!-- campaign jenkins上进行smoke test的job -->
<suite name="Alpha Regression" configfailurepolicy="continue">

    <listeners>
        <listener class-name="io.qameta.allure.testng.AllureTestNg"/>
        <listener class-name="newcrm.listeners.AllureTestListener"/>
        <listener class-name="utils.Listeners.CustomListener"/>
    </listeners>

    <!-- 添加 Allure 相关参数 -->
    <parameter name="allure.results.directory" value="target/allure-results"></parameter>
    <parameter name="allure.report.directory" value="target/allure-report"></parameter>

    <parameter name="Brand" value="${brand}"></parameter>
    <parameter name="Server" value="${container}"></parameter>

    <test name="ADMIN Campaign API Regression">
        <classes>
            <class name="newcrm.testcases.alpharegression.AlphaAPIAdminCampaignTestCases">
                <methods>
                    <include name="testAPIAdminCampaignSearchAllPage"></include>
                    <include name="testAPIAdminLoyaltyProgramPage"></include>
                    <include name="testAPIAdminCampaignSetting"></include>
                </methods>
            </class>
        </classes>
    </test>
</suite>
