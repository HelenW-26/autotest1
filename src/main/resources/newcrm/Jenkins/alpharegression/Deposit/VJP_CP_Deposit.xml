<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE suite SYSTEM "http://testng.org/testng-1.0.dtd">
<suite name="VJP Deposit Test Suite" configfailurepolicy="continue">

    <!-- this parameter is used for Account Audit option. Value can be "test", "beta" or "prod".
    When value is set to "beta" or "prod", the field Accout_Group_Setting can only be one test settings, like test_crm1_USD -->
    <listeners>
        <listener class-name="utils.Listeners.CustomListener"/>
    </listeners>
    <parameter name="Brand" value="VJP"></parameter>
    <parameter name="TestEnv" value="alpha"></parameter>
    <parameter name="Regulator" value="svg"></parameter>
    <parameter name="TraderURL" value="${TraderURL}"></parameter>
    <parameter name="TraderPass" value="123Qwe@@"></parameter>
    <parameter name="headless" value="true"></parameter>
    <parameter name="OpenAPIURL" value="https://openapi-core-vjp.crm-alpha.com"></parameter>


	<test name="VJP Credit Card Deposit">
        <parameter name="TraderName" value="testcrm_donttouch_cpsdeposit_japan_client@test.com"></parameter>
        <classes>
            <class name="newcrm.testcases.cptestcases.DepositTestCases">
                <methods>
                    <!-- No sandbox, prod key submit fail <include name="testSDPay"></include> -->
                    <include name="cpsJapanJCB"></include>
                </methods>
            </class>
        </classes>
    </test>
    <test name="VJP E-Wallet Deposit">
        <parameter name="TraderName" value="testcrm_donttouch_cpsdeposit_japan_client@test.com"></parameter>
        <classes>
            <class name="newcrm.testcases.cptestcases.DepositTestCases">
                <methods>
                    <include name="cpsJapanEWallet"></include>
                    <include name="cpsJapanBT"></include>
                </methods>
            </class>
        </classes>
    </test>
    <test name="VJP_Japan_Deposit">
        <parameter name="TraderName" value="testcrm_donttouch_cps_japan_client@test.com"></parameter>
        <classes>
            <class name="newcrm.testcases.cptestcases.DepositTestCases">
                <methods>
                    <include name="cpsBitwallet"></include>
                    <include name="testCPSCryptoDeposit"></include>
                    <include name="cpsJapanEmoney"></include>
                    <include name="cpsJapanKonbini"></include>
                    <include name="cpsSlash"></include>
                </methods>
            </class>
        </classes>
    </test>
</suite> <!-- Suite -->
