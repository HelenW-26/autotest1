<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE suite SYSTEM "http://testng.org/testng-1.0.dtd">
<suite name="VJP CP Deposit Test Suite New" configfailurepolicy="continue">

    <!-- this parameter is used for Account Audit option. Value can be "test", "beta" or "prod".
    When value is set to "beta" or "prod", the field Accout_Group_Setting can only be one test settings, like test_crm1_USD -->
    <listeners>
        <listener class-name="utils.Listeners.CustomListener"/>
    </listeners>
    <parameter name="Brand" value="VJP"></parameter>
    <parameter name="TestEnv" value="alpha"></parameter>
    <parameter name="Regulator" value="svg"></parameter>
    <parameter name="TraderURL" value="${TraderURL}"></parameter>
    <parameter name="TraderPass" value="123Qwe@@"></parameter>
    <parameter name="headless" value="true"></parameter>
    <parameter name="OpenAPIURL" value="https://openapi-core-vjp.crm-alpha.com"></parameter>

    <test name="VJP Credit Card Deposit">
        <parameter name="TraderName" value="testcrm_automationuser@testcrm.com"></parameter>
        <classes>
            <class name="newcrm.testcases.cptestcases.DepositTestCases">
                <methods>
                    <include name="testPaymentOptionJPY_New"></include>
                </methods>
            </class>
        </classes>
    </test>
    <test name="VJP_Japan_Deposit">
        <parameter name="TraderName" value="testcrm_automationuser@testcrm.com"></parameter>
        <classes>
            <class name="newcrm.testcases.cptestcases.DepositTestCases">
                <methods>
                    <include name="cpsBitwallet_New"></include>
                    <include name="testCryptoUSDCERCNew"></include>
                    <include name="testCryptoBITNew"></include>
                    <include name="testCryptoERCNew"></include>
                    <include name="testDepositCryptoETHNew"></include>
                    <include name="cpsJapanBTTheJapanOne_New"></include>
                    <include name="cpsJapanEmoney_New"></include>
                    <include name="cpsJapanKonbini_New"></include>
                    <include name="cpsJapanBT_Payeasy_New"></include>
                </methods>
            </class>
        </classes>
    </test>
</suite> <!-- Suite -->